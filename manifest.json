{
  "manifest_version": 3,
  "name": "Link2WhatsApp",
  "description": "Save and send URLs to your WhatsApp with a note.",
  "version": "1.0",
  "permissions": ["tabs", "storage", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "128": "icon.png"
  }
  ,
  "host_permissions": [
    "https://link2whatsapp-backend.vercel.app/*"
  ]
}